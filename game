  <script type="text/javascript">

    let profiles = {
      "1": {
        "profession": "Pilot",
        "location": "Guzzo Movies",
        "allergies": "Corn",
        "fav_food": "Sushi"
      }
    };

    function fetchProfile() {
      bracelet_id = document.getElementById("bracelet_id").value
      var profile = profiles[bracelet_id]

      if (profile == undefined) {
        document.getElementById("bracelet_error").innerHTML = "Profile not found"
      } else {
        document.getElementById("bracelet_error").innerHTML = ""
        document.getElementById("profile").style.display = "block"

        document.getElementById("profession").innerHTML = profile["profession"]
        document.getElementById("fav_food").innerHTML = profile["fav_food"]
        document.getElementById("location").innerHTML = profile["location"]
        document.getElementById("allergies").innerHTML = profile["allergies"]
      }

    }
  </script>
